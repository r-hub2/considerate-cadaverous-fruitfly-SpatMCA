CXX_STD = CXX17

# Strict headers; force tinythread backend (no TBB linkage)
PKG_CPPFLAGS = -DSTRICT_R_HEADERS -DRCPP_PARALLEL_USE_TBB=0

# Enable OpenMP if available; link BLAS/LAPACK/Fortran provided by R
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
