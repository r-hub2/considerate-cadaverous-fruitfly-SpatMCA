CXX_STD = CXX17

# Keep headers strict and force tinythread backend (no TBB linkage)
PKG_CPPFLAGS = -DSTRICT_R_HEADERS -DRCPP_PARALLEL_USE_TBB=0 \
               $(shell "${R_HOME}/bin/Rscript" -e "cat(Rcpp:::CxxFlags())")

# Only BLAS/LAPACK + sanitizer libs + Rcpp linkage are required
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(ASAN_LIBS) $(UBSAN_LIBS) \
           $(shell "${R_HOME}/bin/Rscript" -e "cat(Rcpp:::LdFlags())")
